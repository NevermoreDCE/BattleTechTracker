<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MechTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MechTracker.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MechTracker">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Create Mech"
        ContentTemplate="{DataTemplate local:CreateMechPage}"
        Route="CreateMechPage" />

    <ShellContent
        Title="Set Armor"
        ContentTemplate="{DataTemplate local:SetArmorPage}"
        Route="SetArmorPage" />

    <ShellContent
        Title="Set Internals"
        ContentTemplate="{DataTemplate local:SetInternalsPage}"
        Route="SetInternalsPage" />

    <ShellContent
        Title="Weapon Damage Input"
        ContentTemplate="{DataTemplate local:WeaponDamageInputPage}"
        Route="WeaponDamageInputPage" />


    <ShellContent
        Title="Select Phase"
        ContentTemplate="{DataTemplate local:SelectPhasePage}"
        Route="SelectPhasePage" />

    <ShellContent
        Title="Select Mech to Activate"
        ContentTemplate="{DataTemplate local:SelectActiveMechPage}"
        Route="SelectActiveMechPage" />

    <ShellContent
    Title="Select Mech to Load"
    ContentTemplate="{DataTemplate local:LoadMechPage}"
    Route="LoadMechPage" />


</Shell>
