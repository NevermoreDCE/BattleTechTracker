<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MechTracker.Views.WeaponDamageInputPage"
             Title="Incoming Weapon Damage">
    <Grid RowDefinitions="*,Auto" Padding="30">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout x:Name="DamageStack" Spacing="12" VerticalOptions="Center">
                <!-- Damage Entry fields will be added in code-behind -->
            </VerticalStackLayout>
        </ScrollView>
        <Grid Grid.Row="1" ColumnDefinitions="*,*" Padding="0,30,0,0">
            <Button Text="Back" Clicked="OnBackClicked" HorizontalOptions="Start"/>
            <Button Text="Apply Damage" Clicked="OnApplyDamageClicked" Grid.Column="1" HorizontalOptions="End"/>
        </Grid>
    </Grid>
</ContentPage>
