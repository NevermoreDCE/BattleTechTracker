<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MechTracker.Views.MainPage"
             Title="MechTracker">
    <VerticalStackLayout VerticalOptions="Center" Spacing="30" Padding="30">
        <Button Text="Create A New Mech"
                Clicked="OnCreateNewMechClicked"
                HorizontalOptions="Center"/>
        <Button Text="Load An Existing Mech"
                Clicked="OnLoadExistingMechClicked"
                HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
