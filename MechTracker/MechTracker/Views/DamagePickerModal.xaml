<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MechTracker.Views.DamagePickerModal"
             Title="Pick a Number">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Enter damage amount:" FontAttributes="Bold" FontSize="Medium" HorizontalOptions="Center" />
        <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" HorizontalOptions="Center" RowSpacing="30" ColumnSpacing="30">
            <Button x:Name="Button1" Text="1" Grid.Row="0" Grid.Column="0" Clicked="OnQuickPickClicked" />
            <Button x:Name="Button2" Text="2" Grid.Row="0" Grid.Column="1" Clicked="OnQuickPickClicked" />
            <Button x:Name="Button5" Text="5" Grid.Row="1" Grid.Column="0" Clicked="OnQuickPickClicked" />
            <Button x:Name="Button10" Text="10" Grid.Row="1" Grid.Column="1" Clicked="OnQuickPickClicked" />
        </Grid>
        <Entry x:Name="NumberEntry" Keyboard="Numeric" Text="8" HorizontalOptions="Center" WidthRequest="100" />
        <Button Text="Apply" Clicked="OnApplyClicked" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
